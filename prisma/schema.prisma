generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id        String   @id @default(uuid())
  user_id   String
  city      String
  merchant  String
  amount    Float
  currency  String
  category  String
  timestamp DateTime
}
